@model IEnumerable<ToDoList.Models.ToDoLists>

@{
    ViewData["Title"] = "ToDo";
}

<div class="container">
    <div class="row">
        <div class="text">
<h1>ToDo List</h1>

<p>
    <a asp-action="Create" class="btn-primary createbtn" style="background-color: black" 
       title="Click here to add new to do Activity" >
        Create New Activity
    </a>
</p>
</div>


<div class="col-md-4"></div>
<div class="col-md-4">
@foreach (var item in Model) {
   <ul class="list-group">
  <li class="list-group-item">
      <input class="form-check-input me-1" type="checkbox" 
             style="background-color: #6c757d" value="" aria-label="...">
            @Html.DisplayFor(modelItem => item.ToDoValue)
  </li>
  </ul>
}
</div>
    </div>
</div>


